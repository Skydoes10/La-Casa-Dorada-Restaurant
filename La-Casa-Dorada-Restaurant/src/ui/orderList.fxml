<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tvOrderList" prefHeight="600.0" prefWidth="804.0">
              <columns>
                <TableColumn fx:id="tcCodeOrder" prefWidth="88.0" text="Código" />
                <TableColumn fx:id="tcProductsOrder" prefWidth="105.0" text="Productos" />
                  <TableColumn fx:id="tcQuantitiesOrder" prefWidth="107.0" text="Cantidades" />
                  <TableColumn fx:id="tcClientOrder" prefWidth="91.0" text="Cliente" />
                  <TableColumn fx:id="tcEmployeeOrder" prefWidth="91.0" text="Empleado" />
                  <TableColumn fx:id="tcDateOrder" prefWidth="118.0" text="Fecha" />
                  <TableColumn fx:id="tcObsOrder" prefWidth="145.0" text="Observaciones" />
              </columns>
            </TableView>
            <VBox prefHeight="500.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnAddOrder" mnemonicParsing="false" onAction="#addOtherOrder" prefHeight="38.0" prefWidth="142.0" text="Añadir" textFill="#05c939">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnDeleteOrder" layoutX="10.0" layoutY="48.0" mnemonicParsing="false" onAction="#deleteOrder" prefHeight="38.0" prefWidth="142.0" text="Eliminar" textFill="#f81e1e">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdateListO" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateListO" prefHeight="38.0" prefWidth="142.0" text="Actualizar Lista" textFill="#0665c7">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="485.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
